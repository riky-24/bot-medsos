{
  "name": "bot-medsos",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start:dev": "NODE_ENV=development node server/app.js",
    "start:staging": "NODE_ENV=staging node server/app.js",
    "start:prod": "NODE_ENV=production node server/app.js",
    "start:prod-pm2": "pm2 start ecosystem.config.cjs --env production",
    "pm2:logs": "pm2 logs bot-medsos",
    "pm2": "pm2",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "// --- DOCKER: GLOBAL ---": "",
    "// --- DOCKER: DEV (Default) ---": "",
    "dc:build": "podman-compose -f infrastructure/docker/docker-compose.yml build",
    "dc:up": "podman-compose -f infrastructure/docker/docker-compose.yml up -d",
    "dc:stop": "podman-compose -f infrastructure/docker/docker-compose.yml stop",
    "dc:down": "podman-compose -f infrastructure/docker/docker-compose.yml down",
    "dc:logs": "podman-compose -f infrastructure/docker/docker-compose.yml logs -f",
    "dc:clean": "podman image prune -f",
    "dc:reset": "npm run dc:down && npm run dc:build && npm run dc:up",
    "// --- DOCKER: STAGING ---": "",
    "stage:build": "NODE_ENV=staging podman-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.staging.yml build",
    "stage:up": "NODE_ENV=staging podman-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.staging.yml up -d",
    "stage:stop": "NODE_ENV=staging podman-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.staging.yml stop",
    "stage:down": "NODE_ENV=staging podman-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.staging.yml down",
    "stage:logs": "NODE_ENV=staging podman-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.staging.yml logs -f",
    "stage:reset": "npm run stage:down && npm run stage:build && npm run stage:up",
    "// --- DOCKER: PRODUCTION ---": "",
    "prod:build": "NODE_ENV=production podman-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.production.yml build",
    "prod:up": "NODE_ENV=production podman-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.production.yml up -d",
    "prod:stop": "NODE_ENV=production podman-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.production.yml stop",
    "prod:down": "NODE_ENV=production podman-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.production.yml down",
    "prod:logs": "NODE_ENV=production podman-compose -f infrastructure/docker/docker-compose.yml -f infrastructure/docker/docker-compose.production.yml logs -f",
    "prod:reset": "npm run prod:down && npm run prod:build && npm run prod:up"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.22.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "pm2": "^6.0.14",
    "prisma": "^5.22.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^9.39.2"
  }
}