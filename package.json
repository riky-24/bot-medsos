{
  "name": "bot-medsos",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start:telegram": "NODE_OPTIONS='--dns-result-order=ipv4first' node server/app.js",
    "start:dev": "NODE_ENV=development NODE_OPTIONS='--dns-result-order=ipv4first' node server/app.js",
    "start:staging": "NODE_ENV=staging NODE_OPTIONS='--dns-result-order=ipv4first' node server/app.js",
    "start:prod": "NODE_ENV=production NODE_OPTIONS='--dns-result-order=ipv4first' node server/app.js",
    "start:prod-pm2": "pm2 start ecosystem.config.cjs --env production",
    "pm2:logs": "pm2 logs bot-medsos",
    "pm2": "pm2",
    "config:validate": "node scripts/validate-config.js",
    "config:check": "node scripts/check-config.js",
    "config:check:dev": "NODE_ENV=development node scripts/check-config.js",
    "config:check:prod": "NODE_ENV=production node scripts/check-config.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "nginx:sync": "sudo cp infrastructure/nginx/config/bot-medsos.conf /etc/nginx/conf.d/bot-medsos.conf && sudo restorecon -v /etc/nginx/conf.d/bot-medsos.conf && sudo nginx -t && sudo systemctl restart nginx"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.22.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "pm2": "^6.0.14",
    "prisma": "^5.22.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^9.39.2"
  }
}